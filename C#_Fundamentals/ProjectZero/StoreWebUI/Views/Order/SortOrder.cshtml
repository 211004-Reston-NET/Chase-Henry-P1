@{
}

@model IEnumerable<StoreWebUI.Models.OrderVM>

<h1> List of Orders</h1>
<div>
    <a class="btn btn-primary text-white" asp-controller="Order" asp-action="Create">Place Order</a>
    <a class="btn btn-primary text-white" asp-controller="Order" asp-action="SortOrder">Sort Orders By Cost</a>
</div>
<br />

<table class="table table-striped table-hover">
    <tr>
        <th>Order ID</th>
        <th>Total</th>
        <th>Customer ID</th>
        <th>Store ID</th>
        <th>Product ID</th>
    </tr>
    @foreach (OrderVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
            <td>@Html.DisplayFor(modelItem => item.Total)</td>
            <td>@Html.DisplayFor(modelItem => item.CustId)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreId)</td>
            <td>@Html.DisplayFor(modelItem => item.prodId)</td>

        </tr>
}
</table>