@{
}

@model IEnumerable<StoreWebUI.Models.ProductVM>

<h1> List of Store Products</h1>

<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Store ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => prod.ProdId)</td>
            <td>@Html.DisplayFor(modelItem => prod.Name)</td>
            <td>@Html.DisplayFor(modelItem => prod.Price)</td>
            <td>@Html.DisplayFor(modelItem => prod.StoreId)</td>
            <td>
                <button class="btn btn-primary text-white" style="color: white">
                    Replenish Inventory
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>