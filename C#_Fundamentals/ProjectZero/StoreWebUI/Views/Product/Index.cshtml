@{
}

@model IEnumerable<StoreWebUI.Models.QuantityVM>

<h1> List of Store Products</h1>

<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Store ID</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => prod.ProdId)</td>
            <td>@Html.DisplayFor(modelItem => prod.Name)</td>
            <td>@Html.DisplayFor(modelItem => prod.Price)</td>
            <td>@Html.DisplayFor(modelItem => prod.StoreId)</td>
            <td>@Html.DisplayFor(modelItem => prod.Quantity)</td>
            <td>
                <button class="btn btn-primary" style="color: white">
                    @Html.ActionLink("Select Product", "ReplenishInventory", "Product", new { p_id = prod.ProdId }, new { @style = "color: white" })
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>