@{
}

@model IEnumerable<StoreWebUI.Models.LineItemVM>

<h1> List of Store Products</h1>

<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Item ID</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => prod.ItemId)</td>
                <td>@Html.DisplayFor(modelItem => prod.Quantity)</td>
                <td>
                    <button class="btn btn-primary" style="color: white">
                        @Html.ActionLink("Add Inventory", "AddInventory", "Product", new { p_id = prod.ItemId }, new { @style = "color: white" })
                    </button>
                </td>
            </tr>
}
    </tbody>
</table>
