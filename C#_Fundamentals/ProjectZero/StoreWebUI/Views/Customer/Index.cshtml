@{
}

@model IEnumerable<StoreWebUI.Models.CustomerVM>

<h1> List of Customers</h1>
<div>
    <a class="btn btn-primary text-white" asp-controller="Customer" asp-action="Create">Add Customer</a>
</div>
<br />
<div class="text-sm-left">
    @using (Html.BeginForm("Search","Customer"))
    {
        <p>
            Find by name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }
    @*<a asp-controller="Customer" asp-action="Index"> Click here to search for a customer</a>*@
</div>
<table class="table table-striped table-hover">
    <tr>    
            <th>Customer ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th></th>
    </tr>
        @foreach(CustomerVM item in Model)
        {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.CustId)</td>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Address)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>
            <button class="btn btn-danger" style="color: white">
                @Html.ActionLink("Delete", "Delete", new { p_id = item.CustId }, new { @style = "color: white" })
            </button>
            <button class="btn btn-primary" style="color: white">
                @Html.ActionLink("View Orders", "CustomerOrders", "Order", new { p_id = item.CustId }, new { @style = "color: white" })
            </button>
        </td>
    </tr>
            }
</table>