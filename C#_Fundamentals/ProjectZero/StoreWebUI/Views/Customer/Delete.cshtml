@{
}

@model StoreWebUI.Models.CustomerVM

<h1 class="display-4">
    Delete Customer
</h1>
<h3>
    Are you you want to delete this Customer?
</h3>
<div>
    <d1>
        <dt>
            ID:
            <span>
                @Html.DisplayFor(model => model.CustId)
            </span>
            <br />
            Name:
            <span>
                @Html.DisplayFor(model => model.Name)
            </span>
            <br />
            Address:
            <span>
                @Html.DisplayFor(model => model.Address)
            </span>
            <br />
            Email:
            <span>
                @Html.DisplayFor(model => model.Email)
            </span>
        </dt>
        <!--We need a form to do a post request-->
        <form asp-action="Delete">
            <!--
            This input element is hidden because we don't want the user to input some id instead we are just supplying the id w
            Already have
        -->
            <input type="hidden" asp-for="CustId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </d1>
</div>