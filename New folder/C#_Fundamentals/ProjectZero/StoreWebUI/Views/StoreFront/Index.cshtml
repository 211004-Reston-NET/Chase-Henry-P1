@{
}

@model IEnumerable<StoreWebUI.Models.StoreFrontVM>

<h1> List of StoreFronts</h1>
<div class="text-sm-left">
    @using (Html.BeginForm())
    {
        <p>
            Find by name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }
    @*<a asp-controller="Customer" asp-action="Index"> Click here to search for a customer</a>*@
</div>
<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Store ID</th>
        <th></th>
    </tr>
    @foreach (StoreFrontVM item in Model)
    {
<tr>
    <td>@Html.DisplayFor(modelItem => item.Name)</td>
    <td>@Html.DisplayFor(modelItem => item.Address)</td>
    <td>@Html.DisplayFor(modelItem => item.StoreId)</td>
    <td>
        <button class="btn btn-primary" style="color: white">
            @Html.ActionLink("View Inventory", "Index", "Product", new { p_id = item.StoreId }, new { @style = "color: white" })
        </button>
        <button class="btn btn-primary" style="color: white">
            @Html.ActionLink("View Orders", "StoreOrders", "Order", new { p_id = item.StoreId }, new { @style = "color: white" })
        </button>
    </td>
</tr>
        
    }
</table>